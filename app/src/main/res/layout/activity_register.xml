<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:text="用户名:"
            android:textSize="25sp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilI"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7">

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/etstyle"
                android:hint="请输入用户名"
                android:textSize="15sp" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:text="密  码:"
            android:textSize="25sp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilII"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7">

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/etstyle"
                android:hint="密码长度不低于6位"
                android:inputType="textPassword"
                android:textSize="15sp" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cbSure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="朕已阅读并同意:" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《用户协议》"
            android:textColor="#f00" />

    </LinearLayout>

    <Button
        android:id="@+id/btnRegiter"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/etPassword"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/load_btn_style"
        android:padding="5dp"
        android:text="注\t册"
        android:textColor="#fff"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tvHint"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="! 密码长度不符合要求"
        android:textColor="@color/rea"
        android:visibility="gone" />
</LinearLayout>
